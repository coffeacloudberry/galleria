{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "preserveConstEnums": true,
        "downlevelIteration": true,
        "target": "es6",
        "sourceMap": true,
        "lib": [
            "es2019",
            "es6",
            "dom",
            "dom.iterable"
        ]
    },
    "include": ["src/**/*", "api/**/*", "tests/unit/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
